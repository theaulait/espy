<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>

      <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">#6CCECB</item>
        <item name="colorPrimaryDark">#218C8D</item>
        <item name="colorAccent">#F9E559</item>
    </style>

    <style name="EditTextStandard" parent="Widget.Design.TextInputLayout">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ButtonStandard" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#218C8D</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="TextViewStart" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">5sp</item>
    </style>

</resources>
